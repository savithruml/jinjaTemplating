---
apiVersion: v1
kind: Pod
metadata:
  name: frontend-pod
  labels:
    tier: app
    application: HRApp-{{ counter }}
    site: USA
    deployment: production
spec:
  containers:
  - name: frontend-pod
    image: savvythru/three-tier-frontend
    env:
    - name: REDMINE_DB_MYSQL
      value: database-svc
    - name: REDMINE_DB_PASSWORD
      value: secret
---
apiVersion: v1
kind: Service
metadata:
  name: redmine-svc
  labels:
    tier: app
    application: HRApp-{{ counter }}
    site: USA
    deployment: production
spec:
  selector:
    tier: app
    application: HRApp-{{ counter }}
  ports:
  - protocol: TCP
    port: 3000
    targetPort: 3000
